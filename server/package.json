{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "yarn start-public & yarn start-private",
    "start-public": "CALL_SCHEDULE_PUBLIC=yes tsx watch src/server-private.ts",
    "start-private": "CALL_SCHEDULE_PUBLIC=no tsx watch src/server-private.ts",
    "build": "rm -rf build && tsc && yarn sentry:sourcemaps",
    "postbuild": "cp package.json build/package.json && cp yarn.lock build/yarn.lock",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org stefanheule --project call-schedule-server ./build && sentry-cli sourcemaps upload --org stefanheule --project call-schedule-server ./build"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.4",
    "@sentry/cli": "^2.23.0",
    "@sentry/node": "^7.90.0",
    "@sentry/profiling-node": "^1.3.2",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/diff": "^5.2.1",
    "@types/jest": "^29.5.13",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "chrono-node": "^2.7.3",
    "cmd-ts": "^0.13.0",
    "concurrently": "^8.2.2",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.6",
    "csv-parser": "^3.0.0",
    "date-fns": "^3.0.1",
    "deep-equal": "^2.2.3",
    "diff": "^5.2.0",
    "dotenv": "^16.3.1",
    "email-validator": "^2.0.4",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "ical-generator": "^7.1.0",
    "ics": "^3.7.6",
    "jest": "^29.7.0",
    "nocache": "^4.0.0",
    "node-xlsx": "^0.23.0",
    "pushover-notifications": "^1.2.2",
    "rrule": "^2.8.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/cli-color": "^2.0.6",
    "@types/deep-equal": "^1.0.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "cli-color": "^2.0.3",
    "prettier-2": "npm:prettier@^2",
    "ts-command-line-args": "^2.5.1",
    "typescript": "^5.3.3"
  }
}
